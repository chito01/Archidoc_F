@model List<Archidoc_F.Models.Liste_documents>
@{
    Layout = null;
    ViewData["Title"] = "Liste des documents";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/images/archi.ico" sizes="32x32" type="image/png">
    <title>@ViewData["Title"] - Archidoc_F</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h2>@ViewData["Title"]</h2>

    <i class="fas fa-download fa-sm text-white-50"></i> Generate Report
    </a>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Numero_document</th>
                    <th scope="col">Nom document</th>
                    <th scope="col">Acronyme document</th>

                </tr>
            </thead>

            <tbody>
